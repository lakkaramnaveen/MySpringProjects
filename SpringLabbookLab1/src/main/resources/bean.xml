<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
		<!-- setter injection using property tag
		
		<bean id="emp" class="com.cg.demo.DI.Employee">
		<property name="employeeId" value="12345"></property>
		<property name="employeeName" value="Harriet"></property>
		<property name="salary" value="40000"></property>
		<property name="businessUnit" value="PES-BU"></property>
		<property name="age" value="30"></property>
		</bean>  -->
		
		
		<!-- constructor injection -->
		<bean id="emp" class="com.cg.demo1.Employee">
		        <constructor-arg name = "employeeId" value = "12345"/>
                <constructor-arg name = "employeeName" value = "Harriet"/>
                <constructor-arg name="salary" value="40000"></constructor-arg>
                <constructor-arg name="businessUnit" value="PES-BU"></constructor-arg>
                <constructor-arg name="age" value="30"></constructor-arg>
		</bean>
		
		
		

</beans>
